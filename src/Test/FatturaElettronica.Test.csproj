  <ItemGroup Label="Common">
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.2.0" />
  </ItemGroup>
  
  <ItemGroup Label="net35" Condition="'$(TargetFramework)'=='net35'">
